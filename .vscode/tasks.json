{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "args": [".", "-B build"],
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["cmake"]
        },
        {
            "label": "run-cli",
            "type": "shell",
            "command": "./thapo-calc",
            "options": {
                "cwd": "${workspaceRoot}/build/src/thapo-calc-cli"
            }
        },
        {
            "label": "run-gui",
            "type": "shell",
            "command": "./thapo-calc-gui",
            "options": {
                "cwd": "${workspaceRoot}/build/src/thapo-calc-gui"
            }
        },
    ]
}
